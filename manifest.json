{
  "manifest_version": 3,
  "name": "Polymarket Live Betting Assistant",
  "version": "1.0.0",
  "description": "Real-time betting recommendations based on live NBA game commentary",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.nba.com/*",
    "https://clob.polymarket.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.nba.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["https://www.nba.com/*"]
    }
  ]
}

